<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Gateway$PlaceholderFragment">

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/reliabilityBar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reliabilityBar"
        android:id="@+id/space7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Supported Data Rates"
        android:id="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="7"
        android:id="@+id/rateValue"
        android:layout_gravity="right" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rateBar"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:max="7"
        android:indeterminate="false"
        android:progress="7" />

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/reliabilityBar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reliabilityBar"
        android:id="@+id/space6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Supported Reliability"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="7"
        android:id="@+id/reliabilityValue"
        android:layout_gravity="right" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reliabilityBar"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:max="7"
        android:indeterminate="false"
        android:progress="7" />

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/reliabilityBar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reliabilityBar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone Access Permissions"
        android:id="@+id/textView4"
        android:layout_below="@+id/reliabilityBar"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS (Fine Resolution)"
        android:id="@+id/switch2"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reliabilityBar"
        android:checked="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS (Mid Resolution)"
        android:id="@+id/switch3"
        android:checked="true"
        android:layout_below="@+id/switch2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch2" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS (Far Resolution)"
        android:id="@+id/switch4"
        android:checked="true"
        android:layout_below="@+id/switch3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/switch5"
        android:layout_below="@+id/switch4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch4"
        android:checked="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:id="@+id/switch6"
        android:checked="true"
        android:layout_below="@+id/switch5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch5" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Input Request"
        android:id="@+id/switch7"
        android:checked="true"
        android:layout_below="@+id/switch6"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch6" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera Request"
        android:id="@+id/switch8"
        android:checked="true"
        android:layout_below="@+id/switch7"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch7" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambient Light"
        android:id="@+id/switch9"
        android:checked="true"
        android:layout_below="@+id/switch8"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch8" />

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/reliabilityBar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reliabilityBar"
        android:id="@+id/space5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Allowed Program Types"
        android:id="@+id/textView5"
        android:layout_below="@+id/switch9"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monetary Incentivized Programs"
        android:id="@+id/switch10"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch9"
        android:checked="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Non-Incentivized Programs"
        android:id="@+id/switch11"
        android:checked="true"
        android:layout_below="@+id/switch10"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch10" />

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/reliabilityBar"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/reliabilityBar"
        android:id="@+id/space4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Master Control"
        android:id="@+id/textView1"
        android:layout_above="@+id/switch1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switch1" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allow Gateway Services"
        android:id="@+id/switch1"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</LinearLayout>
</ScrollView>