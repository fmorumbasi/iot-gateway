<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.umich.eecs.eecs589.home">


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Gateway"
tools:ignore="MergeRootFrame">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="496dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Gateway$PlaceholderFragment">

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/GW_reliabilitySLIDER"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_reliabilitySLIDER"
        android:id="@+id/space7" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Supported Data Rates"
        android:id="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_masterBTN" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GW_dataSLIDER"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:max="7"
        android:indeterminate="false" />

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/GW_reliabilitySLIDER"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_reliabilitySLIDER"
        android:id="@+id/space6" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Supported Reliability"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_masterBTN" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GW_reliabilitySLIDER"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:max="7"
        android:indeterminate="false" />

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/GW_reliabilitySLIDER"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_reliabilitySLIDER" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone Access Permissions"
        android:id="@+id/textView4"
        android:layout_below="@+id/GW_reliabilitySLIDER"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS (Fine Resolution)"
        android:id="@+id/GW_GPS_FINEBTN"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_reliabilitySLIDER"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS (Mid Resolution)"
        android:id="@+id/GW_GPS_MIDBTN"
        android:checked="false"
        android:layout_below="@+id/GW_GPS_FINEBTN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_GPS_FINEBTN" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GPS (Far Resolution)"
        android:id="@+id/GW_GPS_FARBTN"
        android:checked="false"
        android:layout_below="@+id/GW_GPS_MIDBTN"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/GW_timeBTN"
        android:layout_below="@+id/GW_GPS_FARBTN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_GPS_FARBTN"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelerometer"
        android:id="@+id/GW_accelBTN"
        android:checked="false"
        android:layout_below="@+id/GW_timeBTN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_timeBTN" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Input Request"
        android:id="@+id/GW_User_InputBTN"
        android:checked="false"
        android:layout_below="@+id/GW_accelBTN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_accelBTN" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera Request"
        android:id="@+id/GW_User_PhotoBTN"
        android:checked="false"
        android:layout_below="@+id/GW_User_InputBTN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_User_InputBTN" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambient Light"
        android:id="@+id/GW_ambientBTN"
        android:checked="false"
        android:layout_below="@+id/GW_User_PhotoBTN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_User_PhotoBTN" />

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/GW_reliabilitySLIDER"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_reliabilitySLIDER"
        android:id="@+id/space5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Allowed Program Types"
        android:id="@+id/textView5"
        android:layout_below="@+id/GW_ambientBTN"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monetary Incentivized Programs"
        android:id="@+id/GW_MONBTN"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_ambientBTN"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Non-Incentivized Programs"
        android:id="@+id/GW_NONMONBTN"
        android:checked="false"
        android:layout_below="@+id/GW_MONBTN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_MONBTN" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GW_programTEXT"
            android:layout_weight="0.48"
            android:text="PayMe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Program Name"
            android:id="@+id/programLABEL" />
    </LinearLayout>

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/GW_reliabilitySLIDER"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_reliabilitySLIDER"
        android:id="@+id/space4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Master Control"
        android:id="@+id/textView1"
        android:layout_above="@+id/GW_masterBTN"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/GW_masterBTN" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allow Gateway Services"
        android:id="@+id/GW_masterBTN"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</LinearLayout>
</ScrollView>
</RelativeLayout><!-- From: file:/Users/thomas/git/iot-gateway/app_v2/EECS589/app/src/main/res/layout/activity_home.xml -->